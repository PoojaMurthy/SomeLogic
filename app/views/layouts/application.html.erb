<!DOCTYPE html>
<html>
  <head>
    <title>Pinterest</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <form class= "navbar-form navbar-default">
    <div class="container"> 
    <%= link_to "Pinterest", root_path, class:"navbar-brand" %>

      <div class="navbar-form navbar-right">
        <% if not user_signed_in? %>
          <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-primary" %>
          <%= link_to "Sign In", new_user_session_path, class:"btn btn-primary"  %>
        <% end %>  
        <% if user_signed_in? %>
          <%= link_to "New Pin", new_pin_path, class:"btn btn-primary" %>
          <%= link_to "Account Settings", edit_user_registration_path, class:"btn btn-primary" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-primary" %>
        <% end %>     
      </div>

       <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
      </div>
    </form>
  <%= yield %>
  </body>
</html>
